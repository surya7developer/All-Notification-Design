<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_15dp"
        android:paddingHorizontal="@dimen/_15dp"
        android:gravity="center_vertical"
        android:text="@string/notification_types"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"/>

    <LinearLayout
        android:padding="@dimen/_15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOne"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Popup Notification"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTwo"
            app:cornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heads-Up Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnOne"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnThree"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Big Text Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFour"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox Style Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFive"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Big Picture Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSix"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeven"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silent Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEight"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Notification Layout"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNine"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Different Sound"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTen"
            app:cornerRadius="@dimen/_0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Big Icon Notification"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


    </LinearLayout>

</LinearLayout>